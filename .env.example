# Arquivo de exemplo de variáveis de ambiente
# Copie este arquivo para .env e preenchaa com seus valores

# ==================== DJANGO ====================
DEBUG=False
SECRET_KEY=django-insecure-substitua-com-uma-chave-segura-gerada-localmente

# ==================== HOSTS ====================
ALLOWED_HOSTS=localhost,127.0.0.1,seu-app.onrender.com

# ==================== DATABASE ====================
# PostgreSQL (recomendado)
DATABASE_URL=postgresql://user:password@dpg-xxxxx.render.internal:5432/ecaa09

# Ou SQLite (não recomendado para produção)
# DATABASE_URL=sqlite:///db.sqlite3

# ==================== EMAIL (opcional) ====================
# Para enviar emails (confirmação, recuperação de senha)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app

# ==================== STORAGE (opcional) ====================
# Para armazenar uploaded files em S3
USE_S3=False
AWS_ACCESS_KEY_ID=sua-chave-aws
AWS_SECRET_ACCESS_KEY=sua-secret-aws
AWS_STORAGE_BUCKET_NAME=seu-bucket-s3
AWS_S3_REGION_NAME=sa-east-1

# ==================== SEGURANÇA ====================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ==================== CORS ====================
CORS_ALLOWED_ORIGINS=https://seu-app.onrender.com,http://localhost:3000

# ==================== RENDER ====================
RENDER_EXTERNAL_HOSTNAME=seu-app.onrender.com
